rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for testing
    // WARNING: This is open access - only use for testing!
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Alternative: More specific rule for users collection
    // match /users/{userId} {
    //   allow read, write: if true;
    // }
  }
}


<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Login Code Display (shown in all states except unlinked) -->
    <TextView
        android:id="@+id/widget_login_code_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="CODE: --"
        android:textColor="#E2D2FF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- State 0: Unlinked -->
    <LinearLayout
        android:id="@+id/state_unlinked_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/unlinked_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="LINK YOUR WIDGET"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unlinked_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Tap link to enter your login code in-app."
            android:textColor="#E2D2FF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/link_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="LINK"
            android:textAllCaps="false"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- State 1: Start Challenge -->
    <LinearLayout
        android:id="@+id/state_start_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Logo at top-left -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <!-- START CHALLENGE text -->
        <TextView
            android:id="@+id/start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="START\nCHALLENGE"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp" />

        <!-- BEGIN button -->
        <Button
            android:id="@+id/start_begin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="BEGIN"
            android:textAllCaps="false"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- State 2: Celebration (Split Background) -->
    <FrameLayout
        android:id="@+id/state_celebration_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_background_split"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Left side: Target icon and 1 DAY -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Target"
                    android:src="@drawable/target_icon"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/celebration_day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 DAY"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Right side: Congratulatory message -->
            <TextView
                android:id="@+id/celebration_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginStart="16dp"
                android:text="Did you just do that?!\nUnbelievable work!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- States 3 & 4: Progress -->
    <LinearLayout
        android:id="@+id/state_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Top section: Target icon, 1 DAY, and login code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Target"
                android:src="@drawable/target_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progress_streak_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 DAY"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/progress_login_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CODE: --"
                    android:textColor="#E2D2FF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Logo at top-right -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <!-- Status text -->
        <TextView
            android:id="@+id/progress_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Amazing! You've completed today's challenge."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Weekly progress tracker -->
        <LinearLayout
            android:id="@+id/widget_week_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- MON -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_mon_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_mon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="MON"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- TUE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_tue_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_tue"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="TUE"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- WED -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_wed_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_wed"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="WED"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- THU -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_thu_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_thu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="THU"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- FRI -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_fri_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_fri"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="FRI"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- SAT -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_sat_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_sat"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="SAT"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- SUN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:id="@+id/day_sun_bg"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/day_box_background" />
                    <ImageView
                        android:id="@+id/day_sun"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/check_icon"
                        android:visibility="gone" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="SUN"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- START GAME button (only visible in state 4) -->
        <Button
            android:id="@+id/progress_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="START GAME"
            android:textAllCaps="false"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>




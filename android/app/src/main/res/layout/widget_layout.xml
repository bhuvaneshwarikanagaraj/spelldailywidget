<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/widget_logo_state1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START CHALLENGE"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/widget_begin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BEGIN"
        android:textColor="#4A148C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/widget_streak_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/widget_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/widget_streak_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 DAY"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_logo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_login_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE"
        android:textColor="#D8C7FA"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/widget_week_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <!-- The following block repeats for each day (MON-SUN) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_mon_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_mon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_tue_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_tue"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_wed_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_wed"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WED"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_thu_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_thu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_fri_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_fri"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_sat_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_sat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp">
                <ImageView
                    android:id="@+id/day_sun_bg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/day_box_background"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/day_sun"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check_icon"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

